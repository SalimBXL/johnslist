<div id="<%= dom_id task %>">

  <p>
    <strong>Folder:</strong>
    <%= task.folder.name %>
  </p>

  <p>
    <strong>Referent:</strong>
    <%= task.referent.name %> (<%= task.referent.email %>)
  </p>

  <p>
    <strong>Name:</strong>
    <%= task.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>


  <p>
    <strong>Criticality:</strong>
    <%= task.criticality %>
  </p>

  <p>
    <strong>Due date:</strong>
    <%= task.due_date %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= task.status %>
  </p>

  <p>
    <strong>Level:</strong>
    <%= task.level %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= task.priority %>
  </p>

</div>
